# ============================================================
# Code Launcher — environment variables
# Copy to .env.local for local development
# Set as Fly.io secrets for production: fly secrets set KEY=value
# ============================================================

# Database (SQLite path — default: ./sqlite.db, production: /data/sqlite.db)
DATABASE_URL=./sqlite.db

# NextAuth
NEXTAUTH_SECRET=           # openssl rand -hex 32
NEXTAUTH_URL=http://localhost:4200   # production: https://cl-web.fly.dev

# GitHub OAuth app (create at github.com/settings/developers)
GITHUB_ID=
GITHUB_SECRET=

# Restrict login to specific GitHub usernames (comma-separated)
# Leave empty to allow any GitHub account
AUTH_ALLOWED_USERS=cbroberg

# GitHub Personal Access Token (fallback if session token is unavailable)
# Scopes needed: read:user, read:org, repo
GITHUB_TOKEN=

# Fly.io API token (fly tokens create deploy)
FLY_API_TOKEN=

# CL Agent shared secret — agents connecting to /api/agent/ws must send this token
# Generate: openssl rand -hex 32
CL_AGENT_TOKEN=
